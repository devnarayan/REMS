
@{
    ViewBag.Title = "AddPLC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section topright{
<div class="row">
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-pencil-square-o"></i>
            PLC (Preference Location Charges)
            <span>
                >
                Manage
            </span>
        </h1>
    </div>
    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
        <!-- Button trigger modal -->
    </div>
</div>
}
<!-- MAIN CONTENT -->
<div id="content" data-ng-app="MasterApp" data-ng-controller="PLCController">

   
    <div id="MessageArea" class="alert alert-block {{MessageClass}}" style="display:none;">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> {{MessageTitle}}</h4>
        <p>
            {{Message}}
        </p>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="" data-ng-init="PLCAddInit()">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-5">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Edit PLC</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" name="PLCName" id="PLCName" data-ng-model="plc.PLCName" placeholder="PLC Name">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-rupee"></i>
                                                <input type="number" min="0" id="AmountSqFt" data-ng-model="plc.AmountSqFt" max="999999999999.99" name="AmountSqFt" placeholder="Amount / Sq. Ft.">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-rupee"></i>
                                                <input type="number" min="0" id="TaxPer" data-ng-model="plc.TaxPer" max="999999999999.99" name="TaxPer" placeholder="Service Tax Percentage">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-building"></i>
                                                <input type="number" id="FloorNo" data-ng-model="plc.FloorNo" name="FloorNo" placeholder="Floor No, Enter 0 for all Floors">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="toggle">
                                                <input type="checkbox" data-ng-model="plc.Mandatory" value="false" name="checkbox-toggle" checked="checked">
                                                <i data-swchon-text="Yes" data-swchoff-text="No"></i> Mandatory
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>

                                <footer>
                                    <button type="submit" id="btnSave" data-ng-click="AddPLCSave()" class="btn btn-primary">
                                        Save
                                    </button>
                                    <button type="submit" id="btnEdit" data-ng-click="UpdatePLC()" class="btn btn-primary">
                                        Update
                                    </button>
                                    <button type="submit" id="btnCancel" data-ng-click="CancelPLC()" class="btn btn-default">
                                        Cancel
                                    </button>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-7">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-dot-circle-o"></i> </span>
                        <h2>Additional Charges </h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <fieldset class="smart-form">
                                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            <th data-hide="phone">ID</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i>PLC</th>
                                            <th data-hide="phone"><i class="fa fa-fw fa-rupee text-muted hidden-md hidden-sm hidden-xs"></i> Amount/Sq.ft</th>
                                            <th>S.Tax</th>
                                            <th>FloorNo</th>
                                            <th>Mandatory</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr data-ng-repeat="ad in PLCList">
                                            <td>{{ad.PLCID}}</td>
                                            <td>{{ad.PLCName}}</td>
                                            <td>{{ad.AmountSqFt}}</td>
                                            <td>{{ad.TaxPer}}</td>
                                            <td>{{ad.FloorNo}}</td>
                                            <td>{{ad.Mandatory}}</td>
                                            <td>
                                                <span><i class="fa fa-edit pointer" data-ng-click="EditPLC(ad.PLCID)"></i> &nbsp;
                                                <i class="fa fa-trash-o pointer" data-ng-click="EditPLC(ad.PLCID)"  data-toggle="modal" href="#myModal"></i></span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </fieldset>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        <img src="/content/img/logo.png" width="150" alt="SmartAdmin">
                    </h4>
                </div>
                <div class="modal-body no-padding">
                    <form id="login-form" class="smart-form">
                        <fieldset>
                            <section>
                                <div class="row">
                                    <div class="col col-2"></div>
                                    <div class="col col-10">
                                        <label class="label-danger">
                                            Are you sure want to delete PLC ?
                                        </label>
                                    </div>
                                </div>
                            </section>
                        </fieldset>
                        <footer>
                            <button type="submit" data-ng-click="DeletePLC()" class="btn btn-primary">
                                Delete
                            </button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                Cancel
                            </button>
                        </footer>
                    </form>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
</div>
<!-- END MAIN CONTENT -->
@section pagespecific {
    <script src="~/AgController/PLCMasterjs.js"></script>
}