@{
    ViewBag.Title = "AddCharges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section topright{
<div class="row">
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-building-o"></i>
            Tower
            <span>
                >
                Manage
            </span>
        </h1>
    </div>
    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
        <!-- Button trigger modal -->
    </div>
</div>
}
<!-- MAIN CONTENT -->
<div id="content" data-ng-app="AdminApp" data-ng-controller="CreatePropertyController">

   
    <div id="MessageArea" class="alert alert-block alert-{{MessageClass}}" style="display:none;">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> {{MessageTitle}}</h4>
        <p>
            {{Message}}
        </p>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="" data-ng-init="AddTowerInit()">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Manage Tower</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-5">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" data-ng-model="tower.TowerName" name="TowerName" placeholder="Tower Name/No">
                                            </label>
                                        </section>
                                        <section class="col col-5">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" data-ng-model="tower.Block" name="Block" placeholder="Enter Block Name">
                                            </label>
                                        </section>
                                        @*<section class="col col-5 hide">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" name="TowerNo" data-ng-model="tower.TowerNo" placeholder="Tower Number">
                                            </label>
                                        </section>*@
                                    </div>
                                    <div class="row">
                                        <section class="col col-5">
                                            <label class="select">
                                                <select name="ProjectID" id="ProjectID" data-ng-change="ProjectChange()" data-ng-model="tower.ProjectID">
                                                    <option value="0" selected="" disabled="">Select  Project</option>
                                                    <option data-ng-repeat="tw in ProjectList" value="{{tw.ProjectID}}">{{tw.PName}}</option>"
                                                </select> <i></i>
                                            </label>
                                        </section>
                                        <section class="col col-5">
                                            <label class="select">
                                                <select name="ProjectTypeID" id="ProjectTypeID" data-ng-model="tower.ProjectTypeID">
                                                    <option value="0" disabled="" selected="">Select  Project Type</option>
                                                    <option data-ng-repeat="tw in ProjectTypeList" value="{{tw.ProjectTypeID}}">{{tw.TypeName}}</option>"
                                                </select> <i></i>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>


                                <footer>
                                    @*<input type="hidden" id="hidTowerID" name="hidTowerID" data-ng-model="tower.TowerID" />*@
                                    <button type="submit" id="btnUpdate" class="btn btn-primary" data-ng-click="UpdateTower()">
                                        Update
                                    </button>
                                    <button type="submit" id="btnSave" class="btn btn-primary" data-ng-click="AddTowerSave()">
                                        Save
                                    </button>
                                    <button type="submit" onclick="location.reload()"  class="btn btn-default">
                                        Cancel
                                    </button>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-building-o"></i> </span>
                        <h2>View Tower</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body ">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            <th data-hide="phone">ID</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-rotate-right text-muted hidden-md hidden-sm hidden-xs"></i> Tower No</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-building-o text-muted hidden-md hidden-sm hidden-xs"></i> Block</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-building-o text-muted hidden-md hidden-sm hidden-xs"></i> Property</th>
                                            <th data-hide="phone"><i class="fa fa-fw fa-calendar text-muted hidden-md hidden-sm hidden-xs"></i> Possession Date</th>
                                            <th>Property Address</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr data-ng-repeat="tw in TowerProjectList">
                                            <td>{{tw.TowerID}}</td>
                                            <td>{{tw.TowerName}}</td>
                                            <td>{{tw.Block}}</td>
                                            <td>{{ tw.ReceiptPrefix}}-{{tw.PName}}</td>
                                            <td>{{tw.PossessionDateSt}}</td>
                                            <td>{{tw.Address}}</td>
                                            <td><i class="fa fa-edit" data-ng-click="EditTowerClick(tw.TowerID,tw.TowerName,tw.Block,tw.ProjectID)"></i></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->

        </div>
        <!-- END ROW -->
    </section>
</div>
<!-- END MAIN CONTENT -->
