                            <div>

                                <!-- widget content -->
                                <div class="widget-body fuelux" data-ng-init="AddPropertyRemarkInit()">
                                    <input type="hidden" id="hidSaleID" name="hidSaleID" value="@ViewBag.SaleID" />
                                    <div class="step-content">
                                        <div class="form-horizontal" id="fuelux-wizard">
                                            @*@using (Html.BeginForm("Search", "Home", new { area = "" }, FormMethod.Post)) {*@
                                            <div class="form-content">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <b>Property:</b><br />
