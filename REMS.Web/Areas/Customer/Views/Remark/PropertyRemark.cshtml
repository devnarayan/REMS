                                                            <option data-ng-repeat="pro in TowerList" value="{{ pro.TowerID }}">{{pro.TowerName }}</option>
                                                        </select>
                                                        @*<select name="PropertyID" data-ng-change="PropertyName()" data-ng-model="newCust.PropertyID" id="PropertyID" class="form-control">

                                                                <option data-ng-repeat="pro in Properties" value="{{ pro.PropertyID }}">{{ pro.PropertyName }}</option>
                                                            </select>*@
                                                    </div>
                                                    <div class="col-md-4">
                                                        <b>Property Name</b><br />
                                                        <select name="FlatID" class="form-control" data-ng-model="Flat.FlatID" id="FlatID" required>
                                                            <option data-ng-repeat="fl in FlatList" value="{{ fl.FlatID }}">{{ fl.FlatNo }}</option>
                                                        </select>
                                                        <input type="hidden" id="flantname" name="flantname" />
                                                        @*<input type="text" id="searchtext" name="searchtext" class="form-control" />*@
                                                    </div>

                                                    <div class="col-md-4">
                                                        <br />
                                                        <input type="submit" value="Search" data-ng-click="SearchPropertyRemak()" class="btn btn-primary" />
                                                    </div>
                                                </div>
                                                <input type="hidden" name="hidsortby" id="hidsortby" />
                                                <br />
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="table-responsive" id="rptTableContent">
                                                            <table class="table table-bordered table-striped particular_tbl">
                                                                <thead>
                                                                    <tr>
                                                                        <th data-ng-click="reverse=!reverse;orderSearchList('BookingDateSt', reverse)" class="pointer">Follow Date <i class="fa fa-sort-down"></i> </th>
                                                                        <th data-ng-click="reverse=!reverse;orderSearchList('FlatName', reverse)" class="pointer">Property Name <i class="fa fa-sort-down"></i> </th>
                                                                        <th data-ng-click="reverse=!reverse;orderSearchList('Dueamount', reverse)" class="pointer">Due Amount <i class="fa fa-sort-down"></i> </th>
                                                                        <th><b>FollowUp</b></th>
                                                                        <th data-ng-click="reverse=!reverse;orderSearchList('CreateBy', reverse)" class="pointer"> UserName <i class="fa fa-sort-down"></i> </th>
                                                                        <th><b>Action </b></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr data-ng-repeat="sr in SearchList">
                                                                        <td>{{sr.BookingDateSt}}</td>
                                                                        <td>{{sr.FlatName}}</td>
                                                                        <td>{{sr.Dueamount}}</td>
                                                                        <td>{{sr.Remarks}}</td>
                                                                        <td>{{sr.CreateBy}}</td>
                                                                        <td>
                                                                            <a name="rptExport" id="rptExport" href="/Customer/Remark/AddRemark/{{sr.SaleID}}" class="btn btn-info" value="Export"><i class="fa fa-twitter"></i>&nbsp;&nbsp;Followup</a>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>


                                            </div>

                                            @*}*@
                                        </div>
                                    </div>
                                </div>
                                <!-- end widget content -->
                            </div>
                            <!-- end widget div -->
                        </div>
                        <!-- end widget -->
                    </article>
                    <!-- WIDGET END -->
                </div>
                <!-- end row -->
            </section>

            <!-- widget grid -->
