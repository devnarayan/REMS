
@{
    ViewBag.Title = "PlanTypeSalePrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- MAIN CONTENT -->
<div id="content" data-ng-app="MasterApp" data-ng-controller="PlanCtrlController">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-flag"></i>
                Plan Sale Price
                <span>
                    >
                    Manage
                </span>
            </h1>
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <!-- Button trigger modal -->
        </div>
    </div>
    <div id="MessageArea" class="alert alert-block alert-{{MessageClass}}" style="display:none;">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> {{MessageTitle}}</h4>
        <p>
            {{Message}}
        </p>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="" data-ng-init="FlatTypeMasterInit()">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-5">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Manage Sale Price</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label>Select Plan Type</label>
                                            <label class="select">
                                                <select name="PlanID" id="PlanID"  data-ng-model="plan.PlanID">
                                                    <option value="0" selected="" disabled="">Select Plan Type</option>
                                                    <option data-ng-repeat="pl in PlanList" value="{{pl.PlanID}}">{{pl.PlanName}}</option>
                                                </select> <i></i>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label>Select Flat Type</label>
                                            <label class="select">
                                                <select name="FlatType" id="FlatTypeList" data-ng-change="ChangeFlatTypeByName()" data-ng-model="plan.FType">
                                                    <option value="0" selected>All</option>
                                                    <option data-ng-repeat="ftl in FlatTypeList" value="{{ftl.FType}}">{{ftl.FType}}</option>
                                                </select> <i></i>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label>Select Flat Type Size</label>
                                            <label class="select">
                                                <select name="FlatTypeSize" data-ng-model="plan.FlatTypeSizeID">
                                                    <option value="0">All</option>
                                                    <option data-ng-repeat="ftsl in FlatTypeSizeList" value="{{ftsl.FlatTypeSizeID}}">{{ftsl.Size}}</option>
                                                </select> <i></i>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" name="PlanType" data-ng-model="plan.PlanName" placeholder="Enter Installment Plan Name">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" name="SalePrice" data-ng-model="plan.AmountSqFt" placeholder="Enter Sale Price / Sq. Ft.">
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <button type="submit" id="btnUpdate" data-ng-click="UpdatePlanTypeMster()" class="btn btn-primary">
                                        Update
                                    </button>
                                    <button type="submit" data-ng-click="AddPlanTypeMsterSave()" id="btnSave" class="btn btn-primary">
                                        Save
                                    </button>
                                    <button type="submit" data-ng-click="CancelPlanTypeMaster()" id="btnCancel" class="btn btn-default">
                                        Cancel
                                    </button>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-7">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-2" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Plan Sale Price List</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <fieldset>
                                    <div class="row">
                                        <section class="col-md-12">
                                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th data-hide="phone">SN</th>
                                                        <th>Plan</th>
                                                        <th data-class="expand"><i class="fa fa-fw fa-align-left text-muted hidden-md hidden-sm hidden-xs"></i> Plan Name</th>
                                                        <th data-class="expand"><i class="fa fa-fw fa-rupee text-muted hidden-md hidden-sm hidden-xs"></i> Price</th>
                                                        <th data-class="expand"><i class=" text-muted hidden-md hidden-sm hidden-xs"></i> Flat Type</th>
                                                        <th data-class="expand"><i class=" text-muted hidden-md hidden-sm hidden-xs"></i> Size(sq.ft.)</th>
                                                        <th data-hide="phone,tablet"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr data-ng-repeat="fl in PlanTypeMasterList">
                                                        <td data-ng-click="EditPlanTypeMaster(fl.PlanTypeMasterID)" class="pointer"><a href="#"> {{fl.PlanTypeMasterID}}</a></td>
                                                       <td>{{fl.PlanSection}}</td>
                                                         <td>{{fl.PlanName}}</td>
                                                        <td>{{fl.AmountSqFt}}</td>
                                                        <td>{{fl.FType}}</td>
                                                        <td>{{fl.Size}}</td>
                                                        <td>
                                                            <span>
                                                                <i class="fa fa-edit pointer" data-ng-click="EditPlanTypeMaster(fl.PlanTypeMasterID)"></i> &nbsp;&nbsp;
                                                                <i class="fa fa-trash-o pointer" data-ng-click="EditPlanTypeMaster(fl.PlanTypeMasterID)" data-toggle="modal" href="#myModal"></i>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </section>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
                 </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        <img src="/content/img/logo.png" width="150" alt="SmartAdmin">
                    </h4>
                </div>
                <div class="modal-body no-padding">
                    <form id="login-form" class="smart-form">
                        <fieldset>
                            <section>
                                <div class="row">
                                    <div class="col col-2"></div>
                                    <div class="col col-10">
                                        <label class="label-danger">
                                            Are you sure want to delete flat ?
                                        </label>
                                    </div>
                                </div>
                            </section>
                        </fieldset>
                        <footer>
                            <button type="submit" data-ng-click="DeleteFlat()" class="btn btn-primary">
                                Delete
                            </button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                Cancel
                            </button>
                        </footer>
                    </form>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
<!-- END MAIN CONTENT -->
@section pagespecific {
<script src="~/AgController/PlanTypeMasterJs.js"></script>
}