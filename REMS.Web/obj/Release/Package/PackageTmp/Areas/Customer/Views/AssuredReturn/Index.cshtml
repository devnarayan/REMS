@section pagespecific { 
<script src="~/AgController/ASReturnjs.js"></script>
<script>
    $(document).ready(function () {
        $("#datediv").hide();
        $("#alldiv").hide();
        $("#searchflatname").hide();
        // $scope.Flat.FlatID = 0;
        if (localStorage.getItem("searchby") != null) {
            $("#searchby").val(localStorage.getItem("searchby"));
            $("#sortby").val(localStorage.getItem("sortby"));
            $("#datefrom").val(localStorage.getItem("datefrom"));
            $("#dateto").val(localStorage.getItem("dateto"));
            $("#searchtext").val(localStorage.getItem("stext"));


            var v = $("#sortby").val();
            var vv = $("#searchby").val();
            var df = $("#datefrom").val();
            var dt = $("#dateto").val();
            var stext = $("#searchtext").val();
            if (vv.toString() == "All" || vv.toString() == "Paid" || vv.toString() == "Pending" || vv.toString() == "Cancel") {
                $("#alldiv").hide();
                $("#datediv").hide(); $("#searchflatname").hide();
            }
            else {
                if (vv.toString() == "Date") {
                    $("#datediv").show();
                    $("#alldiv").hide(); $("#searchflatname").hide();
                }              
                else {
                    $("#alldiv").hide();
                    $("#datediv").hide();
                  
                    $("#searchflatname").hide();
                }
            }
        }
    })
    $("#sortby").change(function () {
        var v = $("#sortby").val();
        var vv = $("#searchby").val();
        var df = $("#datefrom").val();
        var dt = $("#dateto").val();
        var stext = $("#searchtext").val();
        localStorage.setItem("searchby", vv);
        localStorage.setItem("sortby", v);
        localStorage.setItem("datefrom", df);
        localStorage.setItem("dateto", dt);
        localStorage.setItem("stext", stext);

        $("#hidsortby").val(v);
        if (vv.toString() == "All" || vv.toString() == "Paid" || vv.toString() == "Pending" || vv.toString() == "Cancel") {
            $("#alldiv").hide();
            $("#datediv").hide(); $("#searchflatname").hide();
        }
        else {
            if (vv.toString() == "Date") {
                $("#datediv").show();
                $("#alldiv").hide(); $("#searchflatname").hide();
            }
           else {
                $("#alldiv").hide();
                $("#datediv").hide();
               
                $("#searchflatname").hide();
            }
        }
    })

    $("#searchby").change(function () {
        var v = $("#sortby").val();
        var vv = $("#searchby").val();
        var df = $("#datefrom").val();
        var dt = $("#dateto").val();
        var stext = $("#searchtext").val();
        localStorage.setItem("searchby", vv);
        localStorage.setItem("sortby", v);
        localStorage.setItem("datefrom", df);
        localStorage.setItem("dateto", dt);
        localStorage.setItem("stext", stext);

        $("#hidsortby").val(v);
        if (vv.toString() == "All" || vv.toString() == "Paid" || vv.toString() == "Pending" || vv.toString() == "Cancel") {
            $("#alldiv").hide();
            $("#searchflatname").hide();
            $("#datefrom").val("");
            $("#dateto").val("");
            $("#datediv").hide(); 
        }
        else {
            if (vv.toString() == "Date") {
                $("#datediv").show();
                $("#alldiv").hide(); $("#searchflatname").hide();
            }
            else {
                $("#alldiv").hide();
                $("#datediv").hide();                
                $("#searchflatname").show();
            }
        }
    })
    $("#datefrom").blur(function () {
        var df = $("#datefrom").val();
        localStorage.setItem("datefrom", df);
    })
    $("#dateto").blur(function () {
        var df = $("#dateto").val();
        localStorage.setItem("dateto", df);
    })
    $("#searchtext").blur(function () {
        var df = $("#searchtext").val();
        localStorage.setItem("stext", df);
    })
</script>

