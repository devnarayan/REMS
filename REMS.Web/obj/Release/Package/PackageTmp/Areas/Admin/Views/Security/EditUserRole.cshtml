@{
    ViewBag.Title = "EditUserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- MAIN CONTENT -->
<div id="content" data-ng-app="SecurityApp" data-ng-controller="SecurityController">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-building-o"></i>
                Update Role Access
                <span>
                    >
                    Manage
                </span>
            </h1>
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <!-- Button trigger modal -->
        </div>
    </div>
    <div id="MessageArea" class="alert alert-block alert-{{MessageClass}}" style="display:none;">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> {{MessageTitle}}</h4>
        <p>
            {{Message}}
        </p>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="" data-ng-init="EditUserPropertyInit()">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Manage User Roles</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <fieldset>
                                    <div class="row">
                                        <div class="col-sm-12 smart-form">
                                            <div id="comment-form" class="smart-form">
                                                <fieldset>
                                                    <div class="row">
                                                        <div class="col-md-12 text-center">
                                                            {{status}}
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col col-md-offset-2 col-md-2">Select User Name</div>
                                                        <div class="col col-md-4">
                                                            <select id="UserName" class="form-control" data-ng-model="UserModel.UserName" name="UserName">
                                                                <option data-ng-repeat="us in UserList" value="{{us.UserName}}">{{us.UserName}}</option>
                                                            </select>
                                                        </div>
                                                        <div class="col col-md-2">
                                                            <button class="btn btn-primary btn-lg" data-ng-click="UsersRoleAccessSearch()" type="submit">
                                                                <i class="fa fa-search"></i>
                                                                Search
                                                            </button>
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col col-md-2">User Name:-</div>
                                                        <div class="col col-md-4">{{UserModel.UserName}}</div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col col-md-2">User Role:-</div>
                                                        <div class="col col-md-4">{{UserModel.CurrentRoleName}}</div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col col-md-2">New Role:-</div>
                                                        <div class="col col-md-4">
                                                            <select id="RoleName" class="form-control" data-ng-model="UserModel.RoleName" name="RoleName">
                                                                <option value="Admin">Admin</option>
                                                                <option value="Operation">Operation</option>
                                                                <option value="Marketing">Marketing</option>
                                                                <option value="Office">Office</option>
                                                                <option value="Corporate">Corporate</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col col-md-2"></div>
                                                        <div class="col col-md-2">
                                                            <br />
                                                            <button class="btn btn-success btn-lg" data-ng-click="SaveEditUserRole()" type="submit">
                                                                <i class="fa fa-save"></i>
                                                                Save
                                                            </button>
                                                        </div>
                                                    </div>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <footer>
                                    <button class="btn btn-primary pull-left" data-ng-click="SaveEditUserRole()" type="submit">
                                        <i class="fa fa-save"></i>
                                        Save
                                    </button>
                                    <button class="btn btn-default pull-left btn_marg" type="submit">Cancel</button>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section pagespecific {
    <script src="~/AgController/Securityjs.js"></script>
    <script>
        $(function () {
            $(".datecal").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: '1970:2090'
            });
        });
    </script>
}
